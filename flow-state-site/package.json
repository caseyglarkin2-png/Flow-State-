{
  "name": "yardflow-site",
  "version": "2.0.0",
  "description": "YardFlow by FreightRoll - Yard orchestration and security for freight networks",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint src/lib/**/*.ts src/lib/**/*.tsx lib/**/*.ts lib/**/*.tsx components/**/*.tsx --max-warnings 0 --no-warn-ignored",
    "typecheck": "tsc --noEmit",
    "test": "tsx src/__tests__/schema.test.ts && tsx src/__tests__/roi.test.ts && tsx src/lib/economics/tests/model.test.ts",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ci": "npm run build && playwright test --project=chromium --project=firefox --project=webkit",
    "test:smoke": "playwright test e2e/routes.spec.ts",
    "test:shaders": "tsx scripts/validate-shaders.ts",
    "perf:baseline": "tsx scripts/capture-baseline.ts",
    "perf:audit": "node scripts/lighthouse-audit.js",
    "audit:bundle": "npm run build && node scripts/bundle-audit.js",
    "congruence:check": "tsx scripts/congruence-check.ts",
    "site:crawl": "tsx scripts/site-crawl.ts",
    "precommit": "npm run lint && npm run typecheck && npm run test:unit",
    "predeploy": "npm run typecheck && npm run test:unit && npm run congruence:check && npm run test:e2e:ci",
    "content:budget": "node scripts/validate-content-budget.js",
    "content:duplicates": "node scripts/find-duplicate-content.js",
    "content:scan-duplicates": "tsx scripts/scan-duplicate-content.ts",
    "content:check": "npm run content:budget && npm run content:duplicates",
    "audit:content": "tsx scripts/content-audit.ts"
  },
  "keywords": [
    "logistics",
    "yard",
    "orchestration"
  ],
  "author": "Flow State",
  "license": "MIT",
  "engines": {
    "node": ">=20.x"
  },
  "dependencies": {
    "@deck.gl/core": "^9.2.5",
    "@deck.gl/geo-layers": "^9.2.5",
    "@deck.gl/layers": "^9.2.5",
    "@deck.gl/react": "^9.2.5",
    "@hcaptcha/react-hcaptcha": "^1.17.3",
    "@lottiefiles/react-lottie-player": "^3.6.0",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@react-pdf/renderer": "^4.3.2",
    "@react-spring/web": "^10.0.3",
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.5.0",
    "@sentry/nextjs": "^10.36.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/react": "^19.2.7",
    "@types/three": "^0.182.0",
    "autoprefixer": "^10.4.23",
    "axios": "^1.13.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^12.26.2",
    "lucide-react": "^0.562.0",
    "maplibre-gl": "^5.15.0",
    "next": "^16.1.0",
    "papaparse": "^5.5.3",
    "postcss": "^8.5.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-map-gl": "^8.1.0",
    "recharts": "^3.6.0",
    "resend": "^6.6.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "three": "^0.182.0",
    "typescript": "^5.9.3",
    "web-vitals": "^5.1.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^16.1.4",
    "@playwright/test": "^1.55.0",
    "@resvg/resvg-js": "^2.6.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.0.3",
    "@types/papaparse": "^5.5.2",
    "@vitest/ui": "^4.0.17",
    "axe-core": "^4.11.1",
    "eslint": "^9.18.0",
    "eslint-config-next": "^16.1.0",
    "eslint-config-prettier": "^10.1.8",
    "jsdom": "^27.4.0",
    "posthog-js": "^1.315.0",
    "prettier": "^3.7.4",
    "raw-loader": "^4.0.2",
    "satori": "^0.18.3",
    "sharp": "^0.34.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "vitest": "^4.0.17"
  }
}
